[user]
  name = Jonathan Zacsh
  email = jzacsh@gmail.com
	signingkey = 0x6DA4194060D602C2
[help]
  autocorrect = 1
[alias]
  co = checkout
  br = branch
  ci = commit
  st = status
  l  = pull
  p  = push
  unstage = reset HEAD --
  last = log -1 HEAD
[core]
  pager = less -FRSX
  editor = vim
  excludesFile = ~/.gitignore
;  notesRef = refs/notes/*
[pager]
  status = true
[merge]
  tool = vimdiff
  conflictstyle = diff3
; how do i save the below in config?
;   git-diff --exit-code
[color]
  ui = auto
  status = auto
  branch = auto
[color "diff"]
  plain = white
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[branch "master"]
  mergeoptions = --no-ff
[init]
	templatedir = ~/.config/git_template
[commit]
	gpgsign = true
