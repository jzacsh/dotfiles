[ui]
username = Jonathan Zacsh <jzacsh@zagat.com>
merge = internal:merge
ignore = ~/.hgignore

[defaults]
#suppress noisy extdiff header message
cdiff = -q

[extensions]
hgext.fetch =
hgext.mq =
hgext.extdiff =
hgext.purge =
color =
hgext.pager =
hgext.highlight =
hgext.graphlog =
hgext.record =
hgshelve = ~/usr/lib/python/tksoh/hgshelve.py
#inotify =
#...requires mercurial > v1.5:
#hgext.eol =
#hgext.progress =

[repository]
native = LF

[eol]
only-consistent = False


[pager]
#pager = LESS=$LESS less
pager = LESS='XFR' less
#attend = annotate, log, in
#ignore =

[inotify]
log = ~/docs/logs/hginotify.log

[extdiff]
cmd.cdiff = colordiff
opts.cdiff = -uprN

# [tortoisehg]
# postpull = fetch

[alias]
changelog = outgoing --no-merges --template "Revision {node|short} by {author} on {date|shortdate}:\n{desc}\n\n"
#push = push --new-branch #breaks on v1.4

[hooks]
#update = ''
#pre-push = "hg out -p | grep -in -e 'dd(' -e 'dsm(' -e 'console.*(' && false"
