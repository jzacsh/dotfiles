[ui]
username = Jonathan Zacsh <jzacsh@zagat.com>
merge = internal:merge
ignore = ~/.hgignore

[defaults]
#suppress noisy extdiff header message
cdiff = -q

[extensions]
hgext.fetch=
hgext.mq=
hgext.extdiff=
hgext.purge=
color=
hgext.pager=
hgext.highlight=
hgext.progress=
# hgext.inotify=
hgshelve= ~/usr/lib/mercurial/hgshelve.py
hgext.graphlog=
hgext.eol =
hgext.record =

[repository]
native = LF

[eol]
only-consistent = False


[pager]
#pager = LESS=$LESS less
pager = LESS='XFR' less
#attend = annotate, log, in
#ignore =

[inotify]
log = ~/docs/logs/hginotify.log

[extdiff]
cmd.cdiff = colordiff
opts.cdiff = -uprN

[paths]
jz_stable = http://codelibrary.zagat.com/hg/integration/web5-jzacsh/
jz_edge = http://codelibrary.zagat.com/hg/qa2/web5-jzacsh-qa2/
edge = http://codelibrary.zagat.com/hg/qa2/web5-qa2/
prod = http://codelibrary.zagat.com/hg/prod/web5-prod/
int = http://codelibrary.zagat.com/hg/integration/web5-integration/

# [tortoisehg]
# postpull = fetch

[alias]
push = push --new-branch
changelog = outgoing --no-merges --template "Revision {node|short} by {author} on {date|shortdate}:\n{desc}\n\n"

[hooks]
#update = ''
pre-push = "hg out -p | grep -in -e 'dd(' -e 'dsm(' -e 'console.*(' && false"
