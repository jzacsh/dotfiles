#!/bin/bash

# host-specific configuration
dir="$HOME/.host"
hostfile="$dir/host.$HOSTNAME"
if [[ -f $hostfile ]]; then 
  source $hostfile
if

# generic distro-specific config
prefix=$dir/distro.
if [[ -f /etc/arch-release ]]; then
   [[ -f ${prefix}arch ]] && source ${prefix}arch
elif [[ -f /etc/lsb-release ]]; then
  deb_distro=$(awk -F'=' '/^DISTRIB_ID/{print tolower($2)}' /etc/lsb-release)
  [[ -f $deb_distro ]] && source ${prefix}$deb_distro
fi
